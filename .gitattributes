                  <a href="#contact" onClick={(e) => smoothScroll(e, "#contact")} className="text-xs font-medium underline text-green-300/80 hover:text-green-300 transition-colors">Hire for this â†’</a>
                </div>
              </div>
            ))}
          </div>
        </section>

        {/* Reviews */}
        <section id="reviews" className="py-16">
          <h3 className="text-3xl font-bold mb-8">What Clients Say</h3>
          <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
            {reviews.map((r, i) => (
              <blockquote key={r.name} className="p-6 bg-gradient-to-br from-green-950/10 to-black border border-green-900/20 rounded-xl hover:border-green-500/50 transform hover:scale-105 transition-all duration-300" style={{ animationDelay: ${i * 0.1}s }}>
                <div className="flex gap-1 mb-3">
                  {[...Array(r.rating)].map((_, i) => (
                    <span key={i} className="text-green-400">â˜…</span>
                  ))}
                </div>
                <p className="text-gray-300 leading-relaxed">"{r.text}"</p>
                <footer className="mt-4 text-green-200/80 font-medium">â€” {r.name}</footer>
              </blockquote>
            ))}
          </div>
        </section>

        {/* Offers */}
        <section id="offers" className="py-16">
          <h3 className="text-3xl font-bold mb-6">Special Offers</h3>
          <div className="p-8 rounded-2xl bg-gradient-to-r from-green-900/20 via-green-950/30 to-black border border-green-500/30 shadow-xl">
            <div className="flex items-start gap-4">
              <span className="text-4xl">ðŸŽ‰</span>
              <div>

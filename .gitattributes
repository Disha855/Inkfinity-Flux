function Logo() {
  return (
    <div className="w-12 h-12 rounded-lg flex items-center justify-center shadow-lg" style={{ background: "linear-gradient(135deg, #07130e, #062415)" }}>
      <svg width="36" height="36" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="g1" x1="0" x2="1">
            <stop offset="0" stopColor="#9ef7b8" />
            <stop offset="1" stopColor="#16a34a" />
          </linearGradient>
        </defs>
        <rect width="100" height="100" rx="18" fill="#000" />
        <g transform="translate(12,18) scale(0.75)">
          <path d="M10 60 C 20 30, 60 30, 70 60" stroke="url(#g1)" strokeWidth="8" strokeLinecap="round" fill="none" />
          <circle cx="85" cy="24" r="8" fill="#16a34a" />
          <text x="4" y="92" fill="#9ef7b8" fontSize="22" fontFamily="monospace" fontWeight="700">I&F</text>
        </g>
      </svg>
    </div>
  );
}

function Stat({ number, label }) {
  return (
    <div className="p-6 rounded-xl bg-black/40 border border-green-900/20 hover:border-green-500/50 transition-all duration-300 transform hover:scale-105">
      <div className="text-3xl font-bold text-green-300 mb-2">{number}</div>
      <div className="text-sm text-gray-300">{label}</div>
    </div>
  );
}# Auto detect text files and perform LF normalization

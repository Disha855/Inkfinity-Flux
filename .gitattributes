import React, { useState, useEffect } from "react";

export default function InkfinityFlux() {
  const [mobileMenuOpen, setMobileMenuOpen] = useState(false);
  const [scrolled, setScrolled] = useState(false);
  const [formData, setFormData] = useState({ name: "", email: "", project: "" });
  const [formErrors, setFormErrors] = useState({});
  const [showSuccess, setShowSuccess] = useState(false);

  useEffect(() => {
    const handleScroll = () => setScrolled(window.scrollY > 50);
    window.addEventListener("scroll", handleScroll);
    return () => window.removeEventListener("scroll", handleScroll);
  }, []);

  const services = [
    { title: "Branding & Logos", desc: "Minimal, bold logos that tell your story.", icon: "ðŸŽ¨" },
    { title: "Posters & Flyers", desc: "Eye-catching print and digital layouts.", icon: "ðŸ“„" },
    { title: "Social Media Kits", desc: "Optimized assets for all platforms.", icon: "ðŸ“±" },
    { title: "Custom Illustrations", desc: "Unique art that elevates your vibe.", icon: "âœ¨" },
  ];

  const reviews = [
    { name: "Ava R.", text: "Inkfinity Flux nailed our brand look. Sleek work!", rating: 5 },
    { name: "Rohit S.", text: "Quick, professional, and the designs pop.", rating: 5 },
    { name: "Maya K.", text: "Clean aesthetic, fast turnaround. Highly recommend!", rating: 5 },
  ];

  const tools = ["Adobe Illustrator", "Photoshop", "Figma", "Procreate"];

  const smoothScroll = (e, target) => {
    e.preventDefault();
    const element = document.querySelector(target);
    if (element) {
      element.scrollIntoView({ behavior: "smooth", block: "start" });
      setMobileMenuOpen(false);
    }
  };

  const validateForm = () => {
    const errors = {};
    if (!formData.name.trim()) errors.name = "Name is required";
    if (!formData.email.trim()) {
      errors.email = "Email is required";
    } else if (!/\S+@\S+\.\S+/.test(formData.email)) {
      errors.email = "Email is invalid";
    }
    if (!formData.project.trim()) errors.project = "Project details are required";
    return errors;
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    const errors = validateForm();
    if (Object.keys(errors).length === 0) {
      window.location.href = mailto:inkfinityflux@gmail.com?subject=Design Inquiry from ${formData.name}&body=Email: ${formData.email}%0D%0A%0D%0AProject Details:%0D%0A${formData.project};
      setFormData({ name: "", email: "", project: "" });
      setFormErrors({});
      setShowSuccess(true);
      setTimeout(() => setShowSuccess(false), 3000);
    } else {
      setFormErrors(errors);
    }
  };

  const handleChange = (e) => {
    setFormData({ ...formData, [e.target.name]: e.target.value });
    if (formErrors[e.target.name]) {
      setFormErrors({ ...formErrors, [e.target.name]: "" });
    }
  };

  return (
    <div className="min-h-screen bg-black text-white antialiased overflow-x-hidden">
      {/* Animated background */}
      <div className="fixed inset-0 opacity-30 pointer-events-none">
        <div className="absolute top-20 left-10 w-96 h-96 bg-green-500/10 rounded-full blur-3xl animate-pulse"></div>
        <div className="absolute bottom-20 right-10 w-96 h-96 bg-green-300/10 rounded-full blur-3xl animate-pulse" style={{ animationDelay: "1s" }}></div>
      </div>

      <div className="relative max-w-6xl mx-auto px-6 py-6">
        {/* Header */}
        <header className={fixed top-0 left-0 right-0 z-50 transition-all duration-300 ${scrolled ? "bg-black/90 backdrop-blur-lg shadow-lg" : "bg-transparent"}}>
          <div className="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
            <a href="#home" onClick={(e) => smoothScroll(e, "#home")} className="flex items-center gap-3 group">
              <Logo />
              <div className="leading-none">
                <h1 className="text-xl font-bold tracking-wide group-hover:text-green-300 transition-colors">Inkfinity Flux</h1>
                <p className="text-xs text-green-200/60">Design â€¢ Brand â€¢ Visual Poetry</p>
              </div>
            </a>

            <nav className="hidden md:flex gap-6 items-center text-sm">
              {["Home", "About", "Services", "Reviews", "Offers", "Contact"].map((item) => (
                <a
                  key={item}
                  href={#${item.toLowerCase()}}
                  onClick={(e) => smoothScroll(e, #${item.toLowerCase()})}
                  className="text-green-200/85 hover:text-green-300 transition-colors relative group"
                >
                  {item}
                  <span className="absolute -bottom-1 left-0 w-0 h-0.5 bg-green-300 group-hover:w-full transition-all duration-300"></span>
                </a>
              ))}
              <a href="#contact" onClick={(e) => smoothScroll(e, "#contact")} className="px-4 py-2 rounded-lg border border-green-900/30 hover:border-green-500/50 transition-all">Hire Me</a>
            </nav>

            {/* Mobile Menu Button */}
            <button onClick={() => setMobileMenuOpen(!mobileMenuOpen)} className="md:hidden p-2 rounded-md border border-green-900/20 hover:border-green-500/50 transition-all">
              <div className="space-y-1.5">
                <span className={block w-6 h-0.5 bg-green-300 transition-transform duration-300 ${mobileMenuOpen ? "rotate-45 translate-y-2" : ""}}></span>
                <span className={block w-6 h-0.5 bg-green-300 transition-opacity duration-300 ${mobileMenuOpen ? "opacity-0" : ""}}></span>
                <span className={block w-6 h-0.5 bg-green-300 transition-transform duration-300 ${mobileMenuOpen ? "-rotate-45 -translate-y-2" : ""}}></span>
              </div>
            </button>
          </div>

          {/* Mobile Menu */}
          <div className={md:hidden overflow-hidden transition-all duration-300 ${mobileMenuOpen ? "max-h-96" : "max-h-0"}}>
            <nav className="px-6 py-4 space-y-3 bg-black/95 border-t border-green-900/20">
              {["Home", "About", "Services", "Reviews", "Offers", "Contact"].map((item) => (
                <a
                  key={item}
                  href={#${item.toLowerCase()}}
                  onClick={(e) => smoothScroll(e, #${item.toLowerCase()})}
                  className="block text-green-200/85 hover:text-green-300 transition-colors py-2"
                >
                  {item}
                </a>
              ))}
            </nav>
          </div>
        </header>

        {/* Home Section */}
        <section id="home" className="pt-32 pb-16">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <div className="space-y-6 animate-fadeIn">
              <h2 className="text-5xl md:text-6xl font-extrabold tracking-tight">
                Inkfinity Flux
                <span className="block text-green-300/80 text-3xl font-medium mt-3">Black. Green. Boundless.</span>
              </h2>
              <p className="text-gray-300 text-lg max-w-xl leading-relaxed">
                We craft moody, minimal visuals that punch through the noise. From logos to full brand systems â€” clean, bold, and unforgettable.
              </p>

              <div className="flex gap-4 flex-wrap">
                <a href="#services" onClick={(e) => smoothScroll(e, "#services")} className="btn-primary">See Services</a>
                <a href="#contact" onClick={(e) => smoothScroll(e, "#contact")} className="btn-outline">Get in touch</a>
              </div>

              <div className="flex gap-3 pt-4 flex-wrap">
                {tools.map((tool) => (
                  <span key={tool} className="px-3 py-1 text-xs bg-green-900/20 border border-green-900/30 rounded-full text-green-200/80">{tool}</span>
                ))}
              </div>
            </div>

            <div className="p-6 rounded-2xl bg-gradient-to-br from-black to-green-950/20 border border-green-900/40 shadow-2xl animate-fadeIn" style={{ animationDelay: "0.2s" }}>
              <div className="grid grid-cols-2 gap-4">
                {[1, 2, 3, 4].map((n) => (
                  <div key={n} className="h-40 rounded-xl overflow-hidden relative group cursor-pointer transform transition-all duration-500 hover:scale-105 hover:shadow-2xl" style={{ background: "linear-gradient(180deg, rgba(8,25,14,0.6), rgba(0,0,0,0.8))" }}>
                    <div className="absolute inset-0 bg-gradient-to-br from-green-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div className="absolute inset-0 flex items-end p-4">
                      <div className="backdrop-blur-sm bg-black/40 p-2 rounded-md text-sm w-full transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                        <div className="font-semibold">Project {n}</div>
                        <div className="text-xs text-green-200/60">Poster â€¢ Concept</div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </section>

        {/* About */}
        <section id="about" className="py-16">
          <div className="bg-gradient-to-r from-green-950/20 to-black p-10 rounded-2xl border border-green-900/30 shadow-xl">
            <h3 className="text-3xl font-bold mb-6">About Inkfinity Flux</h3>
            <p className="text-gray-300 text-lg leading-relaxed mb-8">
              I'm a designer who believes in minimal chaos â€” tight compositions, raw type, and color that breathes. I build visual identities that age well and feel alive. With years of experience across branding, illustration, and digital design, I help brands stand out with purpose and style.
            </p>

            <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
              <Stat number="5+" label="Years experience" />
              <Stat number="200+" label="Designs shipped" />
              <Stat number="100%" label="Client satisfaction" />
            </div>
          </div>
        </section>

        {/* Services */}
        <section id="services" className="py-16">
          <h3 className="text-3xl font-bold mb-3">Services</h3>
          <p className="text-gray-400 text-lg mb-8">Full-service design â€” brand strategy, asset creation, and ongoing support.</p>

          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {services.map((s, i) => (
              <div
